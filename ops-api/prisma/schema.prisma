generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// 기본 User 모델 (추후 확장)
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}
